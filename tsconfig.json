{
  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "Node",
    "target": "ES2020",
    "lib": [
      "DOM",
      "ES2023"
    ],
    "inlineSourceMap": true,
    "noEmit": true,
    "sourceRoot": "./src",
    "inlineSources": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}